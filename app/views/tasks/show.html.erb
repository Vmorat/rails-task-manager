<h2><%= @task.title %></h2>

<div class="card col-4">
  <div class="card-body">
    <%= @task.details %>
  </div>
</div>

<% if @task.completed %>
  <i class="fa-regular fa-square-check"></i>
  This task is completed
<% else %>
  <i class="fa-regular fa-square"></i>
    This task is not completed yet
<% end %>

<div class="my-2">
<%= link_to "Back to list", tasks_path, class:"btn btn-secondary m-1" %>
<%= link_to 'Edit', edit_path, class:"btn btn-primary" %>
</div>
